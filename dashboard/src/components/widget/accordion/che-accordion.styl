.che-accordion
  .accordion-body, .accordion-title
    display block
    overflow hidden

  .accordion-title
    position relative
    height 40px
    //font-size 1.5em

    span
      position absolute
      bottom 0
      text-overflow ellipsis

      cursor pointer

      transform-origin left bottom
      transform scale3D(1.5, 1.5, 1)
      transition transform 0.5s

  .accordion-body
    //opacity 1
    transition all 0.5s
    transform translateZ(0)

.che-accordion.closed
  .accordion-title
    //font-size 1em
    transition transform 0.5s
    transform-origin left bottom
    transform scale3D(1, 1, 1)

    span
      transform-origin left bottom
      transform scale3D(1, 1, 1)
      transition transform 0.5s

  .accordion-body
    height 0
    //opacity 0
    transition all 0.5s
    transform translateZ(0)
